    .smk-content .smk-flex-row .slick-next:hover,
    .smk-content .smk-flex-row .smk-arrows:hover {
        color: {{ item.th_ac_h }};
        background-color: {{ item.th_abc_h }};
    }


     .smk-content .smk-product-info {
         /*width: {{ item.pi_s }};*/
     }

     .smk-content .smk-product-info > div {
        margin-bottom: {{ item.dbi }}px;
     }

