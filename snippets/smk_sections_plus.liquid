{%- if block.type == "smk_smart_products" -%}{%- assign item = block.settings -%}
{%- assign b_i = block.settings -%}

{%- if item.show_section -%}
<div class="shopify-section smk-content{% if item.no_borders %} no-borders{% endif %}" data-smk-section-location="{{ item.section_location }}">

    <div class="{% if item.top_offset == 'none' %}nomargin {% elsif item.top_offset == 'small' %}smk-offset-small {% endif %}container-indent smk-smart-products-{{ block.id }}" data-smk-section-type="smk_smart_products">
        <div class="container{% if item.fullwidth %}-fluid{% endif %}">
            <div class="row smk-flex-row" style="position: relative;">

                {% if item.st != blank %}
                <div class="smk-smart-title" style="text-align: center; font-size: 22px;">
                    {{ item.st }}
                </div>
                {% endif %}
                {% if item.p != blank %}
                    {%- assign product_handle = item.p -%}
                    {%- assign product = all_products[product_handle] -%}
                {% endif %}
                <div
                     class="product-recommendations__list"
                     data-base-url="{{ routes.product_recommendations_url }}"
                     data-product-id="{{ product.id }}"
                     data-limit="{{ item.p_n }}"
                     data-smk-pb-s="{{ item.pb_s }}"
                     data-smk-pb-b="{{ item.pb_b }}"
                     data-smk-pb-u="{{ item.pb_u }}"
                     data-smk-pb-f="{{ item.pb_f }}"
                     data-smk-pb-t="{{ item.pb_t }}"
                     data-smk-dbi="{{ item.dbi }}"
                     data-smk-pb-f-m="{{ item.pb_f_m }}"
                     data-smk-pb-qv-t="{{ item.pb_qv_t }}"

                     {% if product.selling_plan_required %}
                     {%- liquid
                         assign current_variant = product.selected_or_first_available_variant
                         assign current_selling_plan_allocation = current_variant.selected_selling_plan_allocation
                         if current_selling_plan_allocation == nil and current_variant.requires_selling_plan
                             assign current_selling_plan_allocation = current_variant.selling_plan_allocations | first
                         endif
                         assign offer = current_selling_plan_allocation | default: current_variant
                     -%}

                     data-selling-plan="{{ current_selling_plan_allocation.selling_plan.id }}"
                     {% endif %}
                   >
               </div>

               <div class="quick-view-wrap" style="
               top: 0;
               display: none;
               position: fixed;
               width: 100vw;
               height: 100vh;
               z-index: 100;
               background-color: #000000a3;"
               overflow-y: auto;
               >
               <div class="quick-view" style="    width: 1000px;
                                                  margin: 0 auto;
                                                  padding: 20px;
                                                  margin: 20px auto;
                                                  background-color: white;
                                                  position: relative;
                                                  border-radius: 10px;">
<div class="" onclick="hideQuickView()" style="position: absolute; top: 10px; right: 10px; font-size: 20px; color: black; cursor:pointer;"><i class="fas fa-times"></i></div>
               <div class="row smk-flex-row{% if item.rev_pl %} flex-row-reverse{% endif %}{% if item.rev_pl_m %} row-reverse-mobile{% endif %}">

                                {%- assign product_handle = item.p -%}
                                {%- assign product = all_products[product_handle] -%}
                                {%- assign product_image_size = item.pi_s | append: 'x' | append: item.pi_s -%}
                                {%- assign product_image_size = '1024x1024' -%}
                                {%- assign svg_product_image_size = '400x400' | append: 'px' -%}

                               <div class="smk-product-image col-img col-md-{{ item.grid | split: '.' | first }}" style="max-width: 40%">
                                   {%- if product == blank -%}
                                       {%- include "smk_get_svg" type:'collection' size:svg_product_image_size -%}
                                   {%- else -%}
                                       <!--img class="lazyload"
                                        src="{{ b_i[image] | product_img_url: product_image_size }}"
                                        data-src="{{ b_i[image] | product_img_url: product_image_size }}"
                                        alt="{{ product.featured_image.alt | escape }}"/-->


                                   {%- assign main_url_image = product.featured_image -%}
                                   <div class="smk-paddings-mobile">
                                     <div class="stickprcol-js smk-sticky-gallery-main smk-product-gallery">
                                       <div class="tt-product-single-img{% unless item.gallery_no_zoom %} no-zoom{% endunless %}" data-scrollzoom="{{ item.gallery_scroll }}">
                                         <div class="smk-gallery-paddings-mobile smk-gallery-main-image{% if item.th_l == 'left' or item.th_l == 'right' %}-vertical{% endif %}">

                                           <!--button class="tt-btn-zomm tt-top-right tt-btn-zomm-product-page"><i class="fas fa-search-plus"></i></button-->

                                           <img loading="lazy"
                                           class="zoom-product"
                                           src='{{ main_url_image.src | product_img_url: product_image_size }}'
                                           data-zoom-image="{{ main_url_image | product_img_url: '2048x2048' }}"
                                           alt="{{ main_url_image.alt | escape }}" />

                                           <div class="smk-product-single-img-zoom-arrows">
                                           {%- for image in product.images -%}
                                             {% assign left_image_index = forloop.index | minus: 2 %}
                                             {% assign right_image_index = forloop.index | plus: 0 %}
                                             {% unless forloop.first %}
                                             <a class="smk-arrows smk-arrows-left"
                                                style="display: none;"
                                                href="javascript:void(0);"
                                                data-image="{{ product.images[left_image_index].src | product_img_url: product_image_size }}"
                                                data-zoom-image="{{ product.images[left_image_index].src | product_img_url: '2048x2048' }}"
                                                data-target="{{ product.images[left_image_index].id }}"
                                                data-image-compare="{{ image.src | product_img_url: product_image_size }}">
                                               <i class="fas fa-chevron-left smk-slick-prev"></i>
                                             </a>
                                             {%- endunless -%}
                                             {% unless forloop.last %}
                                             <a class="smk-arrows smk-arrows-right"
                                                style="display: none;"
                                                href="javascript:void(0);"
                                                data-image="{{ product.images[right_image_index].src | product_img_url: product_image_size }}"
                                                data-zoom-image="{{ product.images[right_image_index].src | product_img_url: '2048x2048' }}"
                                                data-target="{{ product.images[right_image_index].id }}"
                                                data-image-compare="{{ image.src | product_img_url: product_image_size }}">
                                               <i class="fas fa-chevron-right smk-slick-next"></i>
                                             </a>
                                             {%- endunless -%}
                                           {%- endfor -%}

                                           </div>
                                         </div>
                                       </div>

                                     </div>
                                   </div>


                                   {%- endif -%}

                               </div>

                               <div class="smk-product-info col-description col-md-{{ item.grid | split: '.' | last }} text-{{ item.ta }}"  style="max-width: 40%">

                                     {% if item.s_pn %}
                                     <div class="smk-product-name">
                                         {%- if product == blank -%}
                                           Product name
                                         {%- else -%}
                                           {{ product.title }}
                                         {%- endif -%}
                                     </div>
                                     {% endif %}

                                     {% if item.s_pn %}{% unless item.s_pdb %}
                                     <div class="smk-product-description">
                                       {%- if product == blank -%}
                                           Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum.
                                         {%- else -%}
                                           {{ product.description }}
                                         {%- endif -%}
                                     </div>
                                     {% endunless %}{% endif %}

                                     {% if item.s_pp %}
                                     <div class="smk-product-offer-price">

                                           <div class="smk-price">
                                               <span class="smk-new-price price-item--sale">
                                                   {%- if product == blank -%}
                                                       {{ 0 | money }}
                                                   {%- else -%}
                                                       {% if item.u_dc %}
                                                           {% if item.dt == 'fixed' %}
                                                               {% assign discount_amount = item.dv | times: 100 %}
                                                               {% if discount_amount < product.selected_or_first_available_variant.price %}
                                                                   {{ product.selected_or_first_available_variant.price | minus: discount_amount | money }}
                                                               {% else %}
                                                                   {{ 0 | money }}
                                                               {% endif %}
                                                           {% else %}
                                                               {% assign discount_amount = product.selected_or_first_available_variant.price | times: item.dv | divided_by: 100 %}
                                                               {{ product.selected_or_first_available_variant.price | minus: discount_amount | money }}
                                                           {% endif %}
                                                       {%- else -%}
                                                           {{ product.selected_or_first_available_variant.price | money }}
                                                       {% endif %}
                                                   {%- endif -%}
                                               </span>
                                               <span class="smk-old-price">
                                                   {%- if product == blank -%}
                                                       {{ 0 | money }}
                                                   {%- else -%}
                                                       {% if item.use_dt %}
                                                           {{ product.selected_or_first_available_variant.price | money }}
                                                       {%- else -%}
                                                           {{ product.selected_or_first_available_variant.compare_at_price | money }}
                                                       {% endif %}
                                                   {%- endif -%}
                                               </span>
                                           </div>

                                       </div>
                                     {% endif %}

                                     {% if item.s_pv %}
                                       {%- unless product.has_only_default_variant -%}
                                       <div class="smk-dynamic-product-variant-wrap">
                                         {%- for option in product.options_with_values -%}
                                         <div class="smk-dynamic-product-variant">
                                           {%- if section.settings.product_selector == 'radio' -%}
                                             <fieldset id="ProductSelect-option-{{ forloop.index0 }}" name="{{ option.name | handleize }}">
                                               <legend>
                                                 {{ option.name | escape }}
                                               </legend>
                                               {%- for value in option.values -%}
                                                 <!-- Check to see if there's a product size option. If there is a size, check to see if there's any availble for purchase. If not, set the variant control in a "disabled" state. -->
                                                 {%- assign variant_label_state = true -%}

                                                 {%- if product.options.size == 1 -%}
                                                   {%- unless product.variants[forloop.index0].available -%}
                                                     {%- assign variant_label_state = false -%}
                                                   {%- endunless -%}
                                                 {%- endif -%}

                                                 <input type="radio"
                                                   {% if option.selected_value == value %} checked="checked"{% endif %}
                                                   {% unless variant_label_state %} disabled="disabled"{% endunless %}
                                                   value="{{ value | escape }}"
                                                   data-index="option{{ forloop.index }}"
                                                   name="{{ option.name | handleize }}"
                                                   id="ProductSelect-option-{{ option.name | handleize }}-{{ value | escape }}">
                                                 <label for="ProductSelect-option-{{ option.name | handleize }}-{{ value | escape }}">
                                                   {{ value | escape }}
                                                 </label>
                                               {%- endfor -%}
                                             </fieldset>
                                           {%- else -%}
                                             <label for="ProductSelect-option-{{ forloop.index0 }}">
                                               {{ option.name | escape }}
                                             </label>
                                             <select id="ProductSelect-{{ forloop.index0 }}" data-index="option{{ forloop.index }}">
                                               {%- for value in option.values -%}
                                                 <option value="{{ value | escape }}"{% if option.selected_value == value %} selected="selected"{% endif %}>
                                                   {{ value | escape }}
                                                 </option>
                                               {%- endfor -%}
                                             </select>
                                           {%- endif -%}


                                           </div>
                                         {%- endfor -%}
                                         </div>

                                         <div class="smk-dynamic-product-variant-list" style="display: none; visibility:hidden;">
                                             {% for option in product.variants %}
                                                <span class="smk-dynamic-product-full-variant"
                                                   data-smk-variant-id="{{option.id}}"
                                                   data-smk-variant-option1="{{ option.option1 }}"
                                                   data-smk-variant-option2="{{ option.option2 }}"
                                                   data-smk-variant-option3="{{ option.option3 }}"
                                                ></span>
                                             {% endfor %}
                                         </div>

                                       {%- endunless -%}
                                     {% endif %}

                                     {% if item.s_pq %}
                                       <div class="smk-product-offer-quantity">
                                           <label for="quantity">Quantity </label>
                                           <input min="1" type="number" id="quantity" name="quantity" value="1" />
                                       </div>
                                     {% endif %}

                                     {% if item.s_pb %}
                                     <div class="btn btn-xl smk-dynamic-product-btn"
                                           data-behaviour="{{ item.button_behaviour }}"
                                           data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                                           data-url="{{ item.link }}"
                                           data-shopify-url="{{ item.s_link }}"
                                           data-product-url="{{ product.url }}"
                                         >
                                     {{ item.text }}
                                     </div>
                                     {% endif %}

                                     {% if item.s_pdb %}
                                       <div class="smk-product-description">
                                         {%- if product == blank -%}
                                             Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum.
                                           {%- else -%}
                                             {{ product.description }}
                                           {%- endif -%}
                                       </div>
                                       {% endif %}

                                       {% if item.s_apb %}
                                         <div class="btn btn-xl smk-dynamic-product-btn"
                                               data-behaviour="{{ item.button_behaviour }}"
                                               data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                                               data-url="{{ item.link }}"
                                               data-shopify-url="{{ item.s_link }}"
                                               data-product-url="{{ product.url }}"
                                             >
                                         {{ item.text }}
                                         </div>
                                         {% endif %}

                               </div>

                           </div>
                           </div>
               </div>


            </div>
        </div>
    </div>
</div>

<style>
.smk-quick-view-wrap {
       top: 0;
       left: 0;
       display: none;
       position: fixed;
       width: 100vw;
       height: 100vh;
       z-index: 100;
       background-color: #000000a3;
}

.smk-quick-view-wrap .smk-quick-view {
    width: 1000px;
    margin: 0 auto;
    padding: 20px;
    margin: 20px auto;
    background-color: white;
    border-radius: 10px;
}

.smk-content .smk-smart-products-{{ block.id }} .smk-smart-title {
     font-size: {{ item.t_fs }}px;
     line-height: {{ item.t_lh }}px;
     font-weight: {{ item.t_fw }};
     margin-bottom: 10px;
     color: {{ item.t_c }};
}

.smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list {
    display: flex;
}

.smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .smk-smart-product-item {
    max-width: calc(100% / {{ item.p_n }} - 20px);
    margin: 0px 10px;
    position: relative;
}
.smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .smk-smart-product-item .smk-add-to-cart-icon {
    position: absolute;
    background-color: #ffffff;
    color: #7d7d7d;
    width: 40px;
    height: 40px;
    padding: 11px 9px;
    cursor: pointer;
    top: 10px;
    {% if item.pb_a_t == 'icon_left' %}
    left: 10px;
    {% elsif item.pb_a_t == 'icon_right' %}
    right: 10px;
    {% endif %}
    font-size: 18px;
    border-radius: 50%;
    box-shadow: 1px 1px 4px #ececec;
    {% if item.pb_a_t != 'icon_left' and item.pb_a_t != 'icon_right' %}
    display: none;
    {% endif %}
}
.smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .smk-smart-product-item .smk-add-to-cart-icon:hover {
    background-color: #7d7d7d;
    color: #ffffff;
}
.smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .smk-smart-product-quick-btn,
.smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .smk-smart-product-btn {
    background-color: #0088cc;
    color: #fff;
    width: fit-content;
    line-height: 1;
    padding: 6px 10px 4px;
    border-radius: 2px;
    margin: 0 auto;
    margin-bottom: 5px;
    cursor: pointer;
}
.smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .smk-smart-product-quick-btn:hover {
    background-color: #019dea;
}
.smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .smk-smart-product-btn {
    background-color: #009a0e;
    {% if item.pb_a_t != 'btn_product' %}
    display: none;
    {% endif %}
}
.smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .smk-smart-product-btn:hover {
    background-color: #00ce13;
}
.smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .product__title {
     font-size: {{ item.pn_fs }}px;
     line-height: {{ item.pn_lh }}px;
     font-weight: {{ item.pn_fw }};
     color: {{ item.pn_c }};
}
.smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .product__price {
    text-align: center;
    font-size: {{ item.pp_fs }}px;
    line-height: {{ item.pp_lh }}px;
    font-weight: {{ item.pp_fw }};
    color: {{ item.ppn_c }};
}
.smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .product__price .old-price {
    text-decoration: line-through;
    margin-left: 10px;
    color: {{ item.ppo_c }};
}

@media (max-width: 790px) {
    .smk-content .smk-smart-products-{{ block.id }} .smk-smart-title {
         font-size: {{ item.t_fs_m }}px;
         line-height: {{ item.t_lh_m }}px;
         font-weight: {{ item.t_fw_m }};
         margin-bottom: 10px;
    }
    .smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .product__title {
         font-size: {{ item.pn_fs_m }}px;
         line-height: {{ item.pn_lh_m }}px;
         font-weight: {{ item.pn_fw_m }};
    }
    .smk-content .smk-smart-products-{{ block.id }} .product-recommendations__list .product__price {
        font-size: {{ item.pp_fs_m }}px;
        line-height: {{ item.pp_lh_m }}px;
        font-weight: {{ item.pp_fw_m }};
    }
}
</style>
