            border-radius: 2px;
            border: 1px solid gray;
            padding: 10px;
            max-width: 60px;
       }

       .smk-content .smk-dynamic-product-variant-wrap {
            {% if item.s_pvl %}
                display: flex;
            {% endif %}
       }

       .smk-content .smk-dynamic-product-variant {
           {% if item.s_pla %}
               display: flex;
               flex-direction: column;
